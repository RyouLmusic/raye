{
  "name": "@raya/cli",
  "version": "0.1.0",
  "description": "Raya AI Agent CLI - Global command-line tool for starting Raya AI Agent",
  "type": "module",
  "private": true,
  "bin": {
    "raya": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun",
    "dev": "bun run src/index.ts",
    "test": "bun test",
    "test:unit": "bun test test/unit",
    "test:property": "bun test test/property",
    "test:integration": "bun test test/integration",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "ui": "workspace:*",
    "core": "workspace:*",
    "common": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/inquirer": "^9.0.7",
    "fast-check": "^3.15.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "cli",
    "ai",
    "agent",
    "raya",
    "command-line"
  ]
}
